<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="24dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView android:id="@+id/textTotalRevenue"
        android:text="Doanh thu tháng: ..."
        android:textSize="18sp" android:textStyle="bold"/>

    <TextView android:id="@+id/textPendingOrders"
        android:text="Đơn hàng chờ xử lý: ..." android:layout_marginTop="8dp"/>

    <Button android:id="@+id/btnViewOrders"
        android:text="Xem đơn hàng" android:layout_marginTop="16dp"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button android:id="@+id/btnManageStaff"
        android:text="Quản lý nhân viên"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
